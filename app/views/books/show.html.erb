<%= flash[:create] %>
<%= flash[:bookupdate] %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render "books/sidebar", user: @book.user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
　      <h1>Book detail</h1>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br />
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
            <% end %>
            <% if @book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  ♡<%= @book.favorites.count %>
                <% end %>
              </td>
            <% end %>
            <td>コメント数：<%= @book.book_comments.count %></td>
          </tr>
        </tbody>
      </table>
      <div class="comments">
        <% @book.book_comments.each do |book_comment| %>
          <p><%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
          <%= book_comment.user.name %>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, row:"5" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>