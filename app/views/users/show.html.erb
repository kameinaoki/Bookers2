<%= flash[:signup] %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "books/sidebar", user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
        <h1>Books</h1>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td>コメント数：<%= book.book_comments.count %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>